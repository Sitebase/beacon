server {
	listen   80 default;
	server_name  beacon;

	log_format analytics '$remote_user [$time_local] - $remote_addr - $http_x_forwarded_for - $http_referer - $http_user_agent - $query_string';

	access_log  /var/log/nginx/localhost.access.log;
	access_log  /vagrant/event.log analytics;

	location / {
		root   /var/www/nginx-default;
		index  index.html index.htm;
	}

	location /track.gif {
		server_tokens off; # Remove nginx version number from server header

		expires       epoch;
		add_header    Content-Type  	image/gif;
		add_header    Cache-Control  	private,no-cache,no-cache=Set-Cookie,proxy-revalidate;
		add_header    Pragma  			no-cache;
		add_header    Server  			"Ninox affinis"; # Some Bubo(Box) branding

    	empty_gif;
	}

	location /doc {
		root   /usr/share;
		autoindex on;
		allow 127.0.0.1;
		deny all;
	}

	location /images {
		root   /usr/share;
		autoindex on;
	}

}